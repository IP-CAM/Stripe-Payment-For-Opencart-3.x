<modification>
    <code>STRIPE Payment Module For OPENCART 3.x</code>
    <name><![CDATA[STRIPE Payment Module For OPENCART 3.x -- Add Menu item]]></name>
    <version>0.1</version>
    <author><![CDATA[Edit Davidev]]></author>
    <!-- Add title refund -->
    <file path="catalog/language/en-gb/common/column_left.php">
        <operation>
            <search><![CDATA[$_['text_order']                = 'Orders';]]]></search>
            <add position="before"><![CDATA[
            $_['text_order_stripe']                = 'Stripe Orders';
            ]]></add>
        </operation>
    </file>
    <!-- Add Line for refund order -->
    <file path="catalog/controller/common/column_left.php">
        <operation>
            <search><![CDATA[if ($this->user->hasPermission('access', 'sale/recurring')) {]]]></search>
            <add position="before"><![CDATA[
            if ($this->user->hasPermission('access', 'extension/payment/stripe')) {
				$sale[] = array(
					'name'	   => $this->language->get('text_recurring'),
					'href'     => $this->url->link('extension/payment/stripe/order', 'user_token=' . $this->session->data['user_token'], true),
					'children' => array()		
				);	
			}
            ]]></add>
        </operation>
    </file>
</modification>